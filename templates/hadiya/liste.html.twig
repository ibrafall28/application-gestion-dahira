{% extends 'accueil.html.twig' %}

{% block title %}Membre index{% endblock %}

{% block body %}
    {% for message in app.flashes('danger') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}
    {{ form_start(form) }}

    <div class="row align-items-center ">
        <div class="col-md-4"> {{ form_row(form.matricule) }}</div>
        <div class="col-md-4"> {{ form_row(form.kourel) }}</div>
        <div class="col-md-4">
            <button class="btn btn-outline-info">{{ button_label|default('rechercher') }}</button>

        </div>

    </div>


    </div>

    {{ form_widget(form) }}
    {{ form_end(form) }}

    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">Matricule</th>
            <th scope="col">Nom</th>
            <th scope="col">Prenom</th>
            <th scope="col">Adresse</th>
            <th scope="col">telephone</th>
            <th scope="col">age</th>
            <th scope="col">action</th>
            <th scope="col">action</th>
            <th scope="col">action</th>
        </tr>
        </thead>
        <tbody>
        {% for membre in membres %}
            <tr>
                <td>{{ membre.matricule }}</td>
                <td>{{ membre.nom }}</td>
                <td>{{ membre.prenom }}</td>
                <td>{{ membre.adresse }}</td>
                <td>{{ membre.telephone }}</td>
                <td>{{ membre.age }}</td>
                <td>
                    <a class= "btn btn-success"href="{{ path('hadiya_new', {'id': membre.id}) }}">Hadiya</a>
                </td>
                <td>
                    <a class= "btn btn-success"href="{{ path('diayante_new', {'id': membre.id}) }}">Diayante</a>
                </td>
                <td>
                    <a class= "btn btn-success"href="{{ path('hadiya_show', {'id': membre.id}) }}">Afficher</a>
                </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="pagination">
        {{  knp_pagination_render(membres)}}
    </div><br>
{% endblock %}
