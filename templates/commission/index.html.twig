{% extends 'accueil.html.twig' %}

{% block title %}Commission index{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <table class="table table-striped">
        <thead>
        <tr>

            <th scope="col">Nom</th>
            <th scope="col">action1</th>
        </tr>
        </thead>
        <tbody>
        {% for commission in commissions %}
            <tr>
                <td>{{ commission.libelle }}</td>
                <td>
                    <a class= "btn btn-primary"href="{{ path('commission_edit', {'id': commission.id}) }}">edit</a>
                </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class= "btn btn-success" href="{{ path('commission_new') }}">nouveau</a>
{% endblock %}
