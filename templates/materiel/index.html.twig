{% extends 'accueil.html.twig' %}

{% block title %}Materiel index{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">numero</th>
            <th scope="col">libelle</th>
            <th scope="col">commission</th>
            <th scope="col">action1</th>
            <th scope="col">action2</th>
        </tr>
        </thead>
        <tbody>
        {% for materiel in materiels %}
            <tr>
                <td>{{ materiel.numero }}</td>
                <td>{{ materiel.libelle }}</td>
                <td>{{ materiel.commission.libelle }}</td>
                <td>
                    <td><a class="btn btn-primary" href="{{ path('materiel_edit', {'id': materiel.id}) }}">edit</a>
                </td>
                <td> {{ include('materiel/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('materiel_new') }}">nouveau</a>
{% endblock %}
