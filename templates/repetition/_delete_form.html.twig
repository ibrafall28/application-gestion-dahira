<form method="post" action="{{ path('repetition_delete', {'id': repetition.id}) }}" onsubmit="return confirm('voulez vous annuller cette repetition?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ repetition.id) }}">
    <button class="btn btn-danger">Annuller</button>
</form>
