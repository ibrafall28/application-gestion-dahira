{% extends 'accueil.html.twig' %}

{% block title %}Evennement index{% endblock %}

{% block body %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <table class="table table-striped">
        <thead>
        <tr>

            <th scope="col">Nom</th>
            <th scope="col">action</th>
        </tr>
        </thead>
        <tbody>
        {% for evennement in evennements %}
            <tr>
                <td>{{ evennement.nom }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('evennement_edit', {'id': evennement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('evennement_new') }}">nouveau</a>
{% endblock %}
